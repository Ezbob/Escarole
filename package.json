{
    "name": "escarole",
    "author": "Anders Busch",
    "description": "An Entity Component System library",
    "version": "0.1.7",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "keywords": [
        "game programming",
        "entity component system",
        "program architecture"
    ],
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "test:coverage": "npm test -- --coverage",
        "test:badges": "npm run test:coverage  && jest-coverage-badges --output \"./docs/badges\"",
        "docs:reference": "typedoc"
    },
    "jest": {
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "coveragePathIgnorePatterns": [
            "index.ts"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "module": "dist/escarole.esm.js",
    "size-limit": [
        {
            "path": "dist/escarole.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/escarole.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^4.10.2",
        "husky": "^6.0.0",
        "jest-coverage-badges": "^1.0.0",
        "size-limit": "^4.10.2",
        "tsdx": "^0.14.1",
        "tslib": "^2.2.0",
        "typedoc": "^0.20.36",
        "typedoc-plugin-markdown": "^3.8.1",
        "typescript": "^3.9.9"
    }
}
